<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yifei.mobilesafe.activity.HomeActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textview1"
        android:text="功能列表"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@color/abc_search_url_text_normal"
        />

    <com.example.yifei.mobilesafe.view.FocusedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hahahahahahahahahahahahahahahahahahahahahahahahahahahahahaha"
        android:singleLine="true"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="marquee"
        android:textColor="@color/bright_foreground_disabled_material_light"/>

    <GridView
        android:id="@+id/gv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:verticalSpacing="30dp"
        android:numColumns="3"/>

</LinearLayout>
